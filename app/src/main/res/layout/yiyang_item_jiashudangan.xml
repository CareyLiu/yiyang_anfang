<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="116pt"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="77pt"
                android:layout_height="77pt"
                android:layout_marginHorizontal="19pt"
                android:src="@mipmap/touxiangnan" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13pt"
                        android:includeFontPadding="false"
                        android:text="姓名（父亲）"
                        android:textColor="@color/color_3"
                        android:textSize="35pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_pinggu"
                        android:layout_width="58pt"
                        android:layout_height="23pt"
                        android:background="@drawable/yiyang_yipinggu"
                        android:gravity="center"
                        android:text="已评估"
                        android:textColor="#875E17"
                        android:textSize="13pt" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15pt"
                    android:includeFontPadding="false"
                    android:text="健康状况良好"
                    android:textColor="@color/color_9"
                    android:textSize="23pt" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginHorizontal="19pt"
            android:background="@color/line" />
    </LinearLayout>
</LinearLayout>
