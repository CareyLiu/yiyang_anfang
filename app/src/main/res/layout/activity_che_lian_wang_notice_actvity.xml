<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.CheLianWangNoticeActvity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_yonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="no more" />

        <TextView
            android:id="@+id/tv_cheliang_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="27pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_yonghuming"
            tools:text="车辆型号：ARCFOXSJFKSJ" />

        <TextView
            android:id="@+id/tv_chepaihaoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="27pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cheliang_xinghao"
            tools:text="车牌号码：" />

        <TextView
            android:id="@+id/tv_fashengshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="27pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_chepaihaoma"
            tools:text="发生时间：2020-1-26 13：06：15" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="27pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fashengshijian"
            tools:text="发生地点：长春南关区170号" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/cl_1" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_line1">

        <TextView
            android:id="@+id/tv_anzhuangshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="23pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="安装时间：2020-03-28" />

        <TextView
            android:id="@+id/tv_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:textColor="#ff666666"
            android:textSize="23pt"
            app:layout_constraintLeft_toRightOf="@+id/tv_anzhuangshijian"
            app:layout_constraintTop_toTopOf="@+id/tv_anzhuangshijian"
            tools:text="型号：无" />


        <TextView
            android:id="@+id/tv_shouhou_dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="23pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_anzhuangshijian"
            tools:text="售后电话：1215454564" />

        <TextView
            android:id="@+id/tv_changjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="厂家：无"
            android:textColor="#ff666666"
            android:textSize="23pt"
            app:layout_constraintLeft_toLeftOf="@+id/tv_xinghao"
            app:layout_constraintLeft_toRightOf="@+id/tv_shouhou_dianhua"
            app:layout_constraintTop_toTopOf="@+id/tv_shouhou_dianhua" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_changjia" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_line_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/cl_2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_line_2">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/xiaoxi_icon_fengnuan"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="检测到以下问题:"
            android:textColor="#ff666666"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_icon" />


        <ImageView
            android:id="@+id/iv_icon_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/guzhang"
            app:layout_constraintLeft_toLeftOf="@+id/iv_icon"
            app:layout_constraintRight_toRightOf="@+id/iv_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_icon" />

        <TextView
            android:id="@+id/tv_guanzhang_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="风暖驻车加热器故障：电压过低或过高"
            android:textColor="#fffc0100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon_2"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon_2"
            app:layout_constraintTop_toTopOf="@id/iv_icon_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>