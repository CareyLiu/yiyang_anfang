<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_liuyan_huashu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="买家留言："
        android:textColor="#ff000000"
        android:textSize="23pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@null"
        android:id="@+id/et_liuyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:hint="选填，先和商家协商一致"
        android:textSize="23pt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_liuyan_huashu"
        app:layout_constraintLeft_toRightOf="@+id/tv_liuyan_huashu"
        app:layout_constraintTop_toTopOf="@+id/tv_liuyan_huashu" />


    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et_liuyan" />

    <TextView

        android:id="@+id/tv_xiaoji_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:text="¥66"
        android:textColor="#fffa7e00"
        android:textSize="27pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line2" />

    <TextView
        android:id="@+id/tv_xiaoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="小计:"
        android:textColor="#ff000000"
        android:textSize="27pt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_xiaoji_price"
        app:layout_constraintRight_toLeftOf="@+id/tv_xiaoji_price"
        app:layout_constraintTop_toTopOf="@+id/tv_xiaoji_price" />

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/tv_xiaoji" />

    <TextView

        android:id="@+id/tv_hongbaodikou_huashu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="红包抵扣"
        android:textColor="#ff000000"
        android:textSize="27pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line3" />

    <ImageView
        android:id="@+id/iv_hongbao_dikou"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginRight="15dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hongbaodikou_huashu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_hongbaodikou_huashu" />


    <TextView
        android:id="@+id/tv_dangqian_kedikou_yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="当前可抵扣金额"
        android:textColor="#ff000000"
        android:textSize="27pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hongbaodikou_huashu" />

    <TextView
        android:id="@+id/tv_dikouyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="-50"
        android:textColor="#FF2B00"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dangqian_kedikou_yue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dangqian_kedikou_yue" />

    <View
        android:id="@+id/view_line4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/tv_dangqian_kedikou_yue" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_weixin"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line4">

        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/dingdan_icon_wexin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="微信支付"
            android:textColor="#ff000000"
            android:textSize="27pt"
            app:layout_constraintBottom_toBottomOf="@+id/iv_weixin"
            app:layout_constraintLeft_toRightOf="@+id/iv_weixin"
            app:layout_constraintTop_toTopOf="@+id/iv_weixin" />

        <ImageView
            android:id="@+id/iv_weixin_select"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_weixin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_weixin"
            tools:background="@color/red" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_alipay"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/constrain_weixin">

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/dingdan_icon_zhifubao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="支付宝支付"
            android:textColor="#ff000000"
            android:textSize="27pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_alipay"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_zhifubao_choose"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/red" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>