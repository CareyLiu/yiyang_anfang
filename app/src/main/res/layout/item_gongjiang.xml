<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/grayeeeeeee" />

    <TextView
        android:id="@+id/tv_gongjiang_ming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_image"
        android:includeFontPadding="false"
        android:text="天成家居美容"
        android:textColor="#ff333333"
        android:textSize="27pt" />

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:layout_below="@+id/tv_gongjiang_ming"
        android:layout_alignLeft="@+id/tv_gongjiang_ming"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/iv_image"
        android:background="@color/grayeeeeeee"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tag"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_image"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gongjiang_pic_weizhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="3.0km"
            android:textColor="#ff000000"
            android:textSize="23pt" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/gongjiang_pic_yirenzheng" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grayeeeeeee" />
</RelativeLayout>