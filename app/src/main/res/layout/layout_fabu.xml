<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_main"
    android:layout_height="match_parent">


    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_alignParentBottom="true"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius_TL="10dp"
        app:rv_cornerRadius_TR="10dp">

        <RelativeLayout
            android:id="@+id/rl_shangjiafabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_shangjiafabu"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shangjiafabu">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_shangjiafabu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="商家发布"
                android:textColor="#ff333333"
                android:textSize="27pt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gongjiangfabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_gongjiangfabu"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/gongjiangfabu">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_gongjiangfabu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="工匠发布"
                android:textColor="#ff333333"
                android:textSize="27pt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bianminfabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_bianminfabu"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/bianminfabu">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bianminfabu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="便民发布"
                android:textColor="#ff333333"
                android:textSize="27pt" />

        </RelativeLayout>
    </com.flyco.roundview.RoundLinearLayout>
</RelativeLayout>