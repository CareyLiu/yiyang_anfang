<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/blue" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="手机吃鸡手柄吃鸡神奇手机吃鸡手柄吃鸡
手机吃鸡手柄吃鸡神奇"
        android:textColor="#ff000000"
        android:textSize="27pt"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="@+id/iv_image" />

    <TextView
        android:id="@+id/tv_xinghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="游戏手柄套餐S-01"
        android:textColor="#ff666666"
        android:textSize="27pt"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥5"
        android:textColor="#ff000000"
        android:textSize="23pt"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        app:layout_constraintLeft_toLeftOf="@+id/tv_xinghao" />

    <TextView
        android:id="@+id/tv_peisong_fangshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="配送方式"
        android:textColor="#ff000000"
        android:textSize="23pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price" />

    <ImageView
        android:id="@+id/iv_enter1"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_peisong_fangshi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_peisong_fangshi"
        tools:background="@color/blue" />

    <TextView
        android:id="@+id/tv_kuaidi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:text="快递¥10.00"
        android:textColor="#ff000000"
        android:textSize="23pt"
        app:layout_constraintBottom_toBottomOf="@+id/iv_enter1"
        app:layout_constraintRight_toLeftOf="@+id/iv_enter1"
        app:layout_constraintTop_toTopOf="@+id/iv_enter1" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/tv_kuaidi" />

</androidx.constraintlayout.widget.ConstraintLayout>