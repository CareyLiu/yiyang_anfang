<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginTop="19pt"
        android:background="@drawable/yiyang_bg_white_radius_10"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:paddingHorizontal="20pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户头像"
                android:textColor="@color/color_2"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/touxiangnan" />
        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:paddingHorizontal="20pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户昵称"
                android:textColor="@color/color_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="咕哒王"
                android:textColor="@color/color_9"
                android:textSize="14sp" />
        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:paddingHorizontal="20pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户性别"
                android:textColor="@color/color_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="男"
                android:textColor="@color/color_9"
                android:textSize="14sp" />
        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:id="@+id/rl_pwd"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:paddingHorizontal="20pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="@color/color_2"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12pt"
                android:layout_height="24pt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/push_gray_999" />
        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:id="@+id/rl_renzheng"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:paddingHorizontal="20pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="用户头像"
                android:textColor="@color/color_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_renzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="点击认证"
                android:textColor="#018AFE"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/bt_login_out"
        android:layout_width="match_parent"
        android:layout_height="76pt"
        android:layout_marginHorizontal="72pt"
        android:layout_marginTop="39pt"
        android:background="@drawable/yiyang_bg_grey_d0_radius_10"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
