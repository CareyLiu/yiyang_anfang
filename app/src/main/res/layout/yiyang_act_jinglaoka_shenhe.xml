<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@drawable/yiyang_bg_white_radius_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡类型"
                        android:textColor="@color/color_2"
                        android:textSize="27pt" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:text="免费卡"
                        android:textColor="@color/color_9"
                        android:textColorHint="@color/color_9"
                        android:textSize="27pt" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡号"
                        android:textColor="@color/color_2"
                        android:textSize="27pt" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:text="12355665599666"
                        android:textColor="@color/color_9"
                        android:textColorHint="@color/color_9"
                        android:textSize="27pt" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有限期至"
                        android:textColor="@color/color_2"
                        android:textSize="27pt" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:text="2023-12-03"
                        android:textColor="@color/color_9"
                        android:textColorHint="@color/color_9"
                        android:textSize="27pt" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="96pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textColor="@color/color_2"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入用户真实姓名"
                        android:textColor="@color/color_9"
                        android:textColorHint="@color/color_9"
                        android:textSize="27pt" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="96pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话号码"
                        android:textColor="@color/color_2"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入电话号码"
                        android:textColor="@color/color_9"
                        android:textColorHint="@color/color_9"
                        android:textSize="27pt" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:id="@+id/ll_card"
                    android:layout_width="match_parent"
                    android:layout_height="96pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证"
                        android:textColor="@color/color_2"
                        android:textSize="27pt" />

                    <TextView
                        android:id="@+id/tv_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入身份证号"
                        android:textColor="@color/color_9"
                        android:textColorHint="@color/color_9"
                        android:textSize="27pt" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bt_shenhe"
                android:layout_width="match_parent"
                android:layout_height="76pt"
                android:layout_marginHorizontal="72pt"
                android:layout_marginTop="39pt"
                android:layout_marginBottom="30pt"
                android:background="@drawable/bt_login_denglu"
                android:gravity="center"
                android:text="开始审核"
                android:textColor="@color/white"
                android:textSize="35pt" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
