<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="12sp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="524pt">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_yingye_time"
                        android:layout_width="261pt"
                        android:layout_height="46pt"
                        android:layout_gravity="bottom"
                        android:background="#80111111"
                        android:gravity="center"
                        android:text="营业时间00:00-00:00"
                        android:textColor="@color/white"
                        android:textSize="23pt" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="223pt"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29pt"
                        android:layout_marginTop="22pt"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="汽车修配厂"
                        android:textColor="@color/black_333333"
                        android:textSize="29pt"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rating_bar"
                        style="@style/storeRatingBarOranger_choose1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="32pt"
                        android:layout_marginTop="98pt"
                        android:numStars="5"
                        android:stepSize="0.5" />

                    <LinearLayout
                        android:id="@+id/ll_lianxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="58pt"
                        android:layout_marginRight="32pt"
                        android:layout_toLeftOf="@+id/ll_daohang"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="46pt"
                            android:layout_height="46pt"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/xiupeichang_icon_dianhua" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:includeFontPadding="false"
                            android:text="联系商家"
                            android:textColor="@color/black_333333"
                            android:textSize="29pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_daohang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="58pt"
                        android:layout_marginRight="35pt"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="46pt"
                            android:layout_height="46pt"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/xiupeichang_icon_daohang" />

                        <TextView
                            android:id="@+id/tv_juli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:includeFontPadding="false"
                            android:text="0km"
                            android:textColor="@color/black_333333"
                            android:textSize="29pt" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29pt"
                        android:layout_marginTop="162pt"
                        android:layout_marginRight="24pt"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="吉林省长春市南关区电缆街219号"
                        android:textColor="@color/black_666666"
                        android:textSize="27pt" />

                    <LinearLayout
                        android:id="@+id/ll_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29pt"
                        android:orientation="horizontal" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE" />

                <RelativeLayout
                    android:id="@+id/ll_maidan"
                    android:layout_width="match_parent"
                    android:layout_height="104pt"
                    android:layout_marginBottom="23pt"
                    android:background="@color/white"
                    android:paddingLeft="29pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19pt"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="买单"
                        android:textColor="@color/black_333333"
                        android:textSize="30pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65pt"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="手机买单更方便"
                        android:textColor="@color/black_666666"
                        android:textSize="23pt" />

                    <TextView
                        android:id="@+id/bt_maidan"
                        android:layout_width="108pt"
                        android:layout_height="61pt"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="29pt"
                        android:background="@drawable/a_xiupeichang_button"
                        android:gravity="center"
                        android:text="买单"
                        android:textColor="@color/white"
                        android:textSize="28pt"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_fuwu_pingjia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="96pt"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/rl_select_fuwu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_select_fuwu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="服务"
                                android:textColor="@color/text_red"
                                android:textSize="35pt"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/vv_select_fuwu"
                                android:layout_width="65pt"
                                android:layout_height="8pt"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/a_xiupeichang_button" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_select_pingjia"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_select_pingjia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="评价"
                                android:textColor="@color/black_333333"
                                android:textSize="35pt"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/vv_select_pingjia"
                                android:layout_width="65pt"
                                android:layout_height="8pt"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/a_xiupeichang_button"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_fuwu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/ll_xiaohuoban_pingjia"
                        android:layout_width="match_parent"
                        android:layout_height="88pt"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="30pt">

                        <View
                            android:layout_width="6pt"
                            android:layout_height="40pt"
                            android:background="@color/text_red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16pt"
                            android:includeFontPadding="false"
                            android:text="小伙伴们的评价"
                            android:textColor="@color/black_333333"
                            android:textSize="30pt" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pingjia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/ll_pinglun"
                        android:layout_width="match_parent"
                        android:layout_height="88pt"
                        android:layout_marginTop="24pt"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="查看更多评价"
                        android:textColor="@color/black_666666"
                        android:textSize="30pt"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffeeeeee"
            app:srlTextSizeTime="10sp"
            app:srlTextSizeTitle="12sp" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
