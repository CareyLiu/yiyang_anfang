<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/nongye_home_bg"
                android:orientation="vertical"
                android:paddingBottom="30pt">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="88pt"
                    android:gravity="center"
                    android:text="农业"
                    android:textColor="@color/white"
                    android:textSize="35pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28pt"
                    android:includeFontPadding="false"
                    android:text="早上好"
                    android:textColor="@color/white"
                    android:textSize="58pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29pt"
                    android:includeFontPadding="false"
                    android:text="欢迎登陆神灯智慧农业"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40pt">

                    <TextView
                        android:id="@+id/tv_du"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_dufuhao"
                        android:includeFontPadding="false"
                        android:text="29"
                        android:textColor="@color/white"
                        android:textSize="160pt" />


                    <TextView
                        android:id="@+id/tv_dufuhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28pt"
                        android:layout_toLeftOf="@id/ll_tianqi"
                        android:includeFontPadding="false"
                        android:text="℃"
                        android:textColor="@color/white"
                        android:textSize="45pt" />

                    <LinearLayout
                        android:id="@+id/ll_tianqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24pt"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_tianqi"
                            android:layout_width="96pt"
                            android:layout_height="96pt"
                            android:includeFontPadding="false"
                            android:src="@mipmap/nongye_qing" />


                        <TextView
                            android:id="@+id/tv_tianqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="晴"
                            android:textColor="@color/white"
                            android:textSize="45pt" />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="38pt"
                        android:layout_height="38pt"
                        android:layout_marginRight="3pt"
                        android:src="@mipmap/nongye_dingwei" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13pt"
                        android:includeFontPadding="false"
                        android:text="哈尔滨"
                        android:textColor="@color/white"
                        android:textSize="23pt" />


                    <ImageView
                        android:layout_width="38pt"
                        android:layout_height="38pt"
                        android:layout_marginRight="3pt"
                        android:src="@mipmap/nongye_kongqi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13pt"
                        android:includeFontPadding="false"
                        android:text="30优"
                        android:textColor="@color/white"
                        android:textSize="23pt" />

                    <ImageView
                        android:layout_width="38pt"
                        android:layout_height="38pt"
                        android:layout_marginRight="3pt"
                        android:src="@mipmap/nongye_shidu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13pt"
                        android:includeFontPadding="false"
                        android:text="69%"
                        android:textColor="@color/white"
                        android:textSize="23pt" />

                    <ImageView
                        android:layout_width="38pt"
                        android:layout_height="38pt"
                        android:layout_marginRight="3pt"
                        android:src="@mipmap/nongye_fengxiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30pt"
                        android:includeFontPadding="false"
                        android:text="无持续风向:  3级"
                        android:textColor="@color/white"
                        android:textSize="23pt" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29pt"
                android:layout_marginTop="38pt"
                android:layout_marginBottom="18pt"
                android:includeFontPadding="false"
                android:text="神灯基地"
                android:textColor="@color/color_3"
                android:textSize="27pt" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content"
                android:layout_width="match_parent"
                android:layout_height="192pt" />


            <LinearLayout
                android:id="@+id/ll_nongshijihua"
                android:layout_width="match_parent"
                android:layout_height="115pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginVertical="19pt"
                android:background="@drawable/yiyang_bg_white_radius_8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="19pt">

                <ImageView
                    android:layout_width="58pt"
                    android:layout_height="58pt"
                    android:layout_marginRight="10pt"
                    android:src="@mipmap/nongye_jihua" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="进行中的农事计划"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18pt"
                        android:includeFontPadding="false"
                        android:text="12.04 - 01.04"
                        android:textColor="@color/color_6"
                        android:textSize="23pt" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="12项"
                    android:textColor="#FFAE00"
                    android:textSize="29pt" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29pt"
                android:layout_marginBottom="29pt">

                <LinearLayout
                    android:id="@+id/ll_ssjk"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_jiankong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="实时监控"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sssj"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_shuju" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="实时数据"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mqbj"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_miaoqing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="苗情病菌"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cqjc"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_below="@id/ll_ssjk"
                    android:layout_marginTop="19pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_chongqing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="虫情监测"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zqjc"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_below="@id/ll_ssjk"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_zaiqing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="灾情监测"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qxhj"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_below="@id/ll_ssjk"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="19pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_qixiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="气象环境"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ncpsy"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_below="@id/ll_cqjc"
                    android:layout_marginTop="19pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_nongchanpin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="农产品溯源"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dzsw"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_below="@id/ll_cqjc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_dianzishangqu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="电子商务"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tjc"
                    android:layout_width="211pt"
                    android:layout_height="211pt"
                    android:layout_below="@id/ll_cqjc"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="19pt"
                    android:background="@drawable/yiyang_bg_white_radius_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="96pt"
                        android:layout_height="96pt"
                        android:layout_marginBottom="19pt"
                        android:src="@mipmap/nongye_tan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="碳监测"
                        android:textColor="@color/color_1"
                        android:textSize="23pt" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
