<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="166dp"
    android:id="@+id/constrain"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="166dp"
            android:layout_height="166dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/yellow" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="9dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="韩国ins7plus软壳xs/xr硅
胶8plusXs Max全包边11111111111111111111111111111111111111"
            android:textColor="#ff000000"
            android:textSize="27pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_juan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="5dp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:rv_backgroundColor="@color/red"
            app:rv_cornerRadius="8dp"
            tools:text="返红包8元" />

        <TextView
            android:id="@+id/tv_jiaqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="¥19.9"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/rtv_juan"
            app:layout_constraintTop_toBottomOf="@+id/rtv_juan" />

        <TextView
            android:id="@+id/tv_fukuanrenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="0人付款"
            android:textColor="#ff999999"
            android:textSize="23pt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_jiaqian"
            app:layout_constraintLeft_toRightOf="@+id/tv_jiaqian"
            app:layout_constraintTop_toTopOf="@+id/tv_jiaqian" />

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jiaqian" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








