<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingTop="17dp"
        android:paddingRight="14dp"
        android:paddingBottom="17dp">


        <TextView
            android:id="@+id/tv_harvestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textColor="@color/black_222222"
            android:textSize="@dimen/sp_14"
            tools:text="seven" />


        <TextView
            android:id="@+id/tv_harvestPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_222222"
            android:textSize="@dimen/sp_14"
            tools:text="15210001000" />


        <TextView
            android:id="@+id/tv_harvestAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_harvestName"
            android:layout_marginTop="@dimen/sp_14"
            android:textColor="@color/gray_666666"
            android:textSize="27pt"
            tools:text="吉林省长春市香坊区果园街40号" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="13sp"
            android:layout_below="@+id/tv_harvestAddress"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="14dp"
            android:background="@color/activity_bg_color" />


        <LinearLayout
            android:id="@+id/ll_harvestDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_harvestDefault"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:button="@null"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="设为默认"
                android:textColor="@color/gray_444444"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_harvestModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="23dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/icon_harvest_address_modify" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:textColor="@color/gray_444444"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_harvestDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/icon_harvest_address_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textColor="@color/gray_444444"
                    android:textSize="27pt" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>