<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginBottom="19pt"
        android:background="@drawable/yiyang_bg_white_radius_10"
        android:orientation="vertical"
        android:paddingHorizontal="19pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="77pt"
                android:layout_height="38pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/yiyang_bg_caigou"
                android:gravity="center"
                android:text="原料"
                android:textColor="@color/white"
                android:textSize="27pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="西洋参-片1.5以上-吉林"
                android:textColor="@color/color_3"
                android:textSize="27pt" />

            <TextView
                android:layout_width="96pt"
                android:layout_height="48pt"
                android:layout_marginLeft="10pt"
                android:background="@drawable/yiyang_bg_grey_e9_radius_10"
                android:gravity="center"
                android:text="已竞标"
                android:textColor="@color/color_9"
                android:textSize="27pt" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105pt"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="5pt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="项目数量：300                                  项目单位：kg"
                android:textColor="@color/color_3"
                android:textSize="23pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15pt"
                android:includeFontPadding="false"
                android:text="2021.-10-12 09：43 至 2021-10-24 12：00 "
                android:textColor="@color/color_main_yiyang"
                android:textSize="23pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
