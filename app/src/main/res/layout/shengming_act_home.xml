<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <com.yiyang.cn.view.NoScrollViewPager
        android:id="@+id/vpg_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_shengming_baogao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shengming_baogao"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginTop="10pt"
                android:src="@mipmap/shengming_baogaojinyi_sel" />

            <TextView
                android:id="@+id/tv_shengming_baogao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="12pt"
                android:includeFontPadding="false"
                android:text="报告建议"
                android:textColor="@color/color_main_yiyang"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_shengming_jiankong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shengming_jiankong"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginTop="10pt"
                android:src="@mipmap/shengming_shishijiankong_nor" />

            <TextView
                android:id="@+id/tv_shengming_jiankong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="12pt"
                android:includeFontPadding="false"
                android:text="实时监控"
                android:textColor="@color/color_3"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_shengming_baojing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shengming_baojing"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginTop="10pt"
                android:src="@mipmap/shengming_lishibaojing_nor" />

            <TextView
                android:id="@+id/tv_shengming_baojing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="12pt"
                android:includeFontPadding="false"
                android:text="历史报警"
                android:textColor="@color/color_3"
                android:textSize="23pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shengming_wode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shengming_wode"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginTop="10pt"
                android:src="@mipmap/shengming_wd_nor" />

            <TextView
                android:id="@+id/tv_shengming_wode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="12pt"
                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="@color/color_3"
                android:textSize="23pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
