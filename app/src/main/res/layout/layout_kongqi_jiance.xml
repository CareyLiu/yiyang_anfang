<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@mipmap/top1">
                <RelativeLayout
                    android:id="@+id/rl_yuanhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/airmonitor_cir_1">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_show_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="32dp"
                            android:text="PM2.5"
                            android:textColor="#ffffffff"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:text="19.06"
                            android:textColor="#ffffffff"
                            android:textSize="55sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="正常"
                            android:textColor="#ffffffff"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rl_yuanhuan"
                    android:layout_toLeftOf="@+id/rl_yuanhuan"
                    android:text="Min 0"
                    android:textColor="#ffffff"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rl_yuanhuan"
                    android:layout_toRightOf="@+id/rl_yuanhuan"
                    android:text="Max 999"
                    android:textColor="#ffffff"
                    android:textSize="27pt" />

                <ImageView
                    android:id="@+id/iv_shuoming"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignTop="@+id/rl_yuanhuan"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/rl_yuanhuan"
                    android:src="@mipmap/tanhao_grey_44" />
                <RelativeLayout
                    android:id="@+id/rl_yan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/airmonitor_smoke_green">



                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp">

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_kongqizhiliang"
                        android:layout_width="81dp"
                        android:layout_height="137dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_con_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_kongqizhiliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_kongqi_zhiliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="0.11"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_kongqizhiliang_danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="ppm"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_kongqizhiliang_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="空气质量"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pm2dian5"
                        android:layout_width="81dp"
                        android:layout_height="137dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_con_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_pm_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="0.11"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_pm2dian5_danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="μg/m³"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_pm2dian5_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="PM2.5"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_jiaquan"
                        android:layout_width="81dp"
                        android:layout_height="137dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_con_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_jiaquan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_jiaquan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="0.11"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_jiaquan_danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="μg/m³"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_jiaquan_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="甲醛"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_co2"
                        android:layout_width="81dp"
                        android:layout_height="137dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_con_8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_eryanghuatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_co2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            tools:text="0.11"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_eryanghuatan_danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="ppm"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />

                        <TextView
                            android:id="@+id/tv_co2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="二氧化碳"
                            android:textColor="#ff333333"
                            android:textSize="27pt" />


                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_kongqizhiliang"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="空气质量指数统计(天)"
                    android:textColor="#ff172434"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="#ff999999"
                        android:textSize="27pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/push_gray_999" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_kongqizhiliang_quxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                tools:layout_height="100dp">

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_pm2dian5"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="pm2.5指数统计(天)"
                    android:textColor="#ff172434"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="#ff999999"
                        android:textSize="27pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/push_gray_999" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_pm2dian5_quxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                tools:layout_height="100dp">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_jiaquan"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="甲醛指数统计(天)"
                    android:textColor="#ff172434"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="#ff999999"
                        android:textSize="27pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/push_gray_999" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_jiaquan_quxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                tools:layout_height="100dp">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_co2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="Co2指数统计(天)"
                    android:textColor="#ff172434"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="#ff999999"
                        android:textSize="27pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/push_gray_999" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_co2_quxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                tools:layout_height="100dp">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>