        <ImageView
            android:layout_width="211pt"
            android:layout_height="match_parent"
            android:src="@mipmap/yiyang_110" />

        <ImageView
            android:layout_width="211pt"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/yiyang_119" />

        <ImageView
            android:layout_width="211pt"
            android:layout_height="match_parent"
