<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        app:image_scale_type="fit_xy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        tools:background="@color/blue" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="麦香村西饼屋(平房店）"
        android:textColor="#ff333333"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/star"
        style="@style/storeRatingBarOranger_choose1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/tv_shop_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_name" />

    <TextView
        android:id="@+id/tv_renjun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="人均:40/人"
        android:textColor="#ff666666"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/star"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_name" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/grayline_cecece"
        app:layout_constraintTop_toBottomOf="@+id/tv_renjun" />

    <ImageView
        android:id="@+id/iv_image1"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/shopxiangqing_dianhua"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />

    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="黑龙江省哈尔滨市平房区友协哈尔滨市平房区友协哈尔滨市平房区区友协哈尔滨市平房区友协友协哈尔滨市平房区友协街道"
        android:textColor="#ff333333"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image1"
        app:layout_constraintLeft_toRightOf="@+id/iv_image1"
        app:layout_constraintTop_toTopOf="@+id/iv_image1" />

    <ImageView
        android:id="@+id/iv_image2"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginRight="19dp"
        android:padding="5dp"
        android:src="@mipmap/xiupeichang_icon_dianhua"
        app:layout_constraintBottom_toBottomOf="@+id/tv_addr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_addr"
        tools:background="@color/blue" />

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="14dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintTop_toBottomOf="@+id/iv_image1" />

    <ImageView
        android:id="@+id/iv_tuangou"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/shopxiangqing_tuan"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line1" />

    <TextView

        android:id="@+id/tv_taocan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="套餐"
        android:textColor="#ff111111"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tuangou"
        app:layout_constraintLeft_toRightOf="@+id/iv_tuangou"
        app:layout_constraintTop_toTopOf="@+id/iv_tuangou" />

    <TextView
        android:id="@+id/tv_maidan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:text="买单"
        android:textColor="#ff111111"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_tuangou"
        app:layout_constraintTop_toBottomOf="@+id/tv_taocan" />

    <TextView
        android:id="@+id/tv_maidan_shouji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="买单手机更方便"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_maidan"
        app:layout_constraintTop_toBottomOf="@+id/tv_maidan" />


    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_maidan"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="买单"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_maidan_shouji"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_maidan"
        app:rv_backgroundColor="@color/text_red"
        app:rv_cornerRadius="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_maidan_shouji" />
</androidx.constraintlayout.widget.ConstraintLayout>