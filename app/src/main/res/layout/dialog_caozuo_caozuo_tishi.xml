<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/pop_bg"
        android:paddingBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginTop="19dp"
            android:src="@mipmap/pop_tips"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_caozuochegngong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="操作提示"
            android:textColor="#ff535353"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_success" />

        <TextView
            android:id="@+id/tv_caozuochenggonghuashu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="确认此操作?"
            android:textColor="#ffa5a5a5"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_caozuochegngong" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_caozuochenggonghuashu">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_left"
                android:layout_width="71dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="我再想想"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:rv_backgroundColor="@color/blue_ff94dfd2"
                app:rv_cornerRadius="8dp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_center"
                android:layout_width="71dp"
                android:layout_height="29dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我再想想"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:rv_backgroundColor="@color/blue_ff94dfd2"
                app:rv_cornerRadius="8dp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_right"
                android:layout_width="71dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="确定"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:rv_backgroundColor="#fff16246"
                app:rv_cornerRadius="8dp" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>