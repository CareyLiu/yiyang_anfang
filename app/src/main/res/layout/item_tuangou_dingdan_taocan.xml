<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_taocanming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:includeFontPadding="false"
            android:text="原滋原味"
            android:textColor="#ff111111"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            android:text="(x1)"
            android:textColor="#ff999999"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_taocanming"
            app:layout_constraintLeft_toRightOf="@+id/tv_taocanming"
            app:layout_constraintTop_toTopOf="@+id/tv_taocanming" />


        <TextView
            android:id="@+id/tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:text="¥ 36"
            android:textColor="#ff111111"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_taocanming"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_taocanming" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>