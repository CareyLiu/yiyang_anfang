<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        tool:layout_constraintLeft_toLeftOf="parent"
        tool:layout_constraintTop_toTopOf="parent"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="车辆通知车辆通知车辆通知车辆通知车辆通知车辆通知车辆通知"
        android:textColor="#ff000000"
        android:textSize="27pt"
        tool:layout_constraintLeft_toRightOf="@+id/iv_image"
        tool:layout_constraintTop_toTopOf="@+id/iv_image" />

    <TextView
        tool:layout_constraintTop_toBottomOf="@+id/tv_type"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"

        android:text="2019-02-12 10:10:10"
        android:textColor="#ff666666"
        android:textSize="23pt"

        tool:layout_constraintLeft_toRightOf="@+id/iv_image" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        tool:layout_constraintTop_toBottomOf="@+id/tv_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayfff5f5f5"
        tool:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/iv_xiaohongdian"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/xiaohongdian"
        tool:layout_constraintBottom_toBottomOf="parent"
        tool:layout_constraintRight_toRightOf="parent"
        tool:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>