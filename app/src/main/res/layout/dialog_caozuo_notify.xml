<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bazi_renzheng"
        android:paddingBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@mipmap/alert_pic_xiaoxi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_caozuochegngong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="故障推送"
            android:textColor="#ff535353"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_success" />

        <TextView
            android:id="@+id/tv_caozuochenggonghuashu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingHorizontal="60dp"
            android:text="加热器当前存在故障已无法继续操作，请及时清理"
            android:textColor="@color/black_666666"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_caozuochegngong" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_caozuochenggonghuashu">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_left"
                android:layout_width="115dp"
                android:layout_height="42dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="忽略"
                android:textSize="12sp"
                app:rv_backgroundColor="@color/white"
                app:rv_cornerRadius="21dp"
                app:rv_strokeColor="#CCCCCC"
                app:rv_strokeWidth="1dp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_right"
                android:layout_width="115dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="去看看"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:rv_backgroundColor="#ccfc0100"
                app:rv_cornerRadius="21dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>