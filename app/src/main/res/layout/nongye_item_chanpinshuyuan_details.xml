<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116pt">

        <RelativeLayout
            android:layout_width="58pt"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view_line_shang"
                android:layout_width="10pt"
                android:layout_height="58pt"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_c" />

            <View
                android:id="@+id/view_line_xia"
                android:layout_width="10pt"
                android:layout_height="58pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_c" />

            <View
                android:layout_width="19pt"
                android:layout_height="19pt"
                android:layout_centerInParent="true"
                android:background="@drawable/yiyang_nongye_shuyuan_quan" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10pt"
            android:layout_marginRight="19pt"
            android:layout_weight="1"
            android:background="@drawable/yiyang_bg_grey_d0_radius_8"
            android:gravity="center_vertical"
            android:paddingHorizontal="19pt">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="收获"
                android:textColor="@color/color_nongye_main"
                android:textSize="35pt" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="2021-05-25"
                android:textColor="@color/color_9"
                android:textSize="35pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>