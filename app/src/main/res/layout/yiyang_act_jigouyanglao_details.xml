<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="19pt"
                android:background="@drawable/yiyang_bg_white_radius_10"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="211pt"
                    android:scaleType="fitXY"
                    android:src="@mipmap/yiyang_yanglaojigou_tu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19pt"
                    android:layout_marginBottom="16pt"
                    android:gravity="bottom"
                    android:paddingHorizontal="20pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="哈尔滨市鑫夕阳温泉养老院"
                        android:textColor="@color/color_3"
                        android:textSize="35pt" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="床位:0"
                        android:textColor="@color/red"
                        android:textSize="27pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19pt"
                    android:paddingHorizontal="20pt">

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="24pt"
                        android:layout_marginRight="4pt"
                        android:src="@mipmap/yanglaojigou_xingxing" />

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="24pt"
                        android:layout_marginRight="4pt"
                        android:src="@mipmap/yanglaojigou_xingxing" />

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="24pt"
                        android:layout_marginRight="4pt"
                        android:src="@mipmap/yanglaojigou_xingxing" />

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="24pt"
                        android:layout_marginRight="4pt"
                        android:src="@mipmap/yanglaojigou_xingxing" />

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="24pt"
                        android:layout_marginRight="4pt"
                        android:src="@mipmap/yanglaojigou_xingxing" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19pt"
                    android:layout_marginBottom="19pt"
                    android:includeFontPadding="false"
                    android:text="民办"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />

                <include layout="@layout/view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20pt">

                    <ImageView
                        android:layout_width="23pt"
                        android:layout_height="29pt"
                        android:layout_marginRight="12pt"
                        android:src="@mipmap/yanglaojigou_dingwei" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黑龙江黑哈尔滨市松北区江都街209号"
                        android:textSize="27pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29pt"
                android:background="@drawable/yiyang_bg_white_radius_10"
                android:orientation="vertical"
                android:paddingHorizontal="18pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19pt"
                    android:includeFontPadding="false"
                    android:text="机构详情"
                    android:textColor="@color/color_3"
                    android:textSize="35pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10pt"
                    android:layout_marginBottom="16pt"
                    android:includeFontPadding="false"
                    android:text="哈尔滨市南岗区鑫夕阳温泉养老院是哈尔滨精心打造
的高端医养结合示范基地，是一家集养老、护理、医
疗、康复和临终关怀等医养融合于一体的非..."
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@drawable/yiyang_bg_white_radius_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18pt"
                    android:layout_marginTop="19pt"
                    android:layout_marginBottom="10pt"
                    android:includeFontPadding="false"
                    android:text="房间详情"
                    android:textColor="@color/color_3"
                    android:textSize="35pt" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="13pt" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@drawable/yiyang_bg_white_radius_10"
                android:orientation="vertical"
                android:paddingHorizontal="18pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19pt"
                    android:includeFontPadding="false"
                    android:text="温馨提示"
                    android:textColor="@color/color_3"
                    android:textSize="35pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="1、养老机构按照老人自愿入院的原则入住。"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="2、养老机构可能对老人提供流动服务与呼叫服务相结合。老人及子女若有增项服务，应该与院方协商，取得同意方可使用。"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="3、预约成功，养老机构会受到您的预约信息，请等待工作人员与您联系。"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21pt"
                    android:includeFontPadding="false"
                    android:text="4、预约成功后，欢迎您按预约时间前往养老机构参观机构环境和现场查看房型。"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_yuyue"
                android:layout_width="match_parent"
                android:layout_height="76pt"
                android:layout_marginHorizontal="72pt"
                android:layout_marginVertical="20pt"
                android:background="@drawable/bt_login_denglu"
                android:text="预约"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
