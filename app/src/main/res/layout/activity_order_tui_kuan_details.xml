<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.dingdan.OrderTuiKuanDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_tuihuodanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:includeFontPadding="false"
            android:textColor="#ff000000"
            android:textSize="12sp"
            tools:text="退货单号:3130845114016541" />

        <TextView
            android:id="@+id/tv_dingdanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:includeFontPadding="false"
            android:textColor="#ff000000"
            android:textSize="12sp"
            tools:text="订单号:     1903130845114016541-fbs-2-111524-0" />


        <TextView
            android:id="@+id/tv_haisheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"

            android:layout_marginBottom="10dp"

            android:textColor="#FFE02E24"

            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="还剩下" />
    </LinearLayout>


    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayf3f3f3"
        app:layout_constraintTop_toBottomOf="@+id/ll_1" />


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_1">

        <LinearLayout
            android:id="@+id/ll_jindutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

        </LinearLayout>


    </RelativeLayout>


    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/grayf3f3f3"
        app:layout_constraintTop_toBottomOf="@+id/rl_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_2">

        <TextView
            android:id="@+id/tv_shouhuoren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="收货人：唠唠看 15946256845" />

        <TextView
            android:id="@+id/tv_shouhuodizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shouhuoren"
            tools:text="收货地址：独守空房简单来说客服就流口水的开发斯蒂芬" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_wuliudanhao_maijia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shouhuodizhi"
            tools:text="收货地址：独守空房简单来说客服就流口水的开发斯蒂芬" />


        <View
            app:layout_constraintTop_toBottomOf="@+id/tv_wuliudanhao_maijia"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayf3f3f3"
        app:layout_constraintTop_toBottomOf="@+id/cl_2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/cl_3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/view_3">

        <TextView
            android:id="@+id/tv_wuliudanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="物流单号"
            android:textColor="#ff201f1e"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入您的物流单号"
            android:textColor="#ff201f1e"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_wuliudanhao"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView

            android:id="@+id/tv_tijioao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_caozuo"
            android:includeFontPadding="false"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:text="提交"
            android:textColor="#ff111111"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wuliudanhao"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_wuliudanhao" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:visibility="gone"
        android:id="@+id/view_line"
        app:layout_constraintTop_toBottomOf="@+id/cl_3"
        android:background="@color/grayf3f3f3"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view_line">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/blue" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:includeFontPadding="false"
            android:text="手机吃鸡手柄吃鸡神奇手机吃鸡手柄吃鸡神奇"
            android:textColor="#ff111111"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toTopOf="@+id/iv_product" />

        <TextView
            android:id="@+id/tv_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="XXL" />

        <TextView
            android:id="@+id/tv_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:includeFontPadding="false"
            android:text="￥500.00"
            android:textColor="#ff000000"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:includeFontPadding="false"
            android:text="x1"
            android:textColor="#ff666666"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_danjia" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:includeFontPadding="false"
            android:text="退款金额"
            android:textColor="#ff111111"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_product"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cl_product">

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>