<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ziaxian_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:text="在线支付"
        android:textColor="#ff000000"
        android:textSize="27pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/civ_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="3月11日 18:15"
        android:textColor="#ff999999"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_ziaxian_pay"
        app:layout_constraintTop_toBottomOf="@+id/tv_ziaxian_pay" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:text="-40.00"
        android:textColor="#ff000000"
        android:textSize="27pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ziaxian_pay" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayfff5f5f5"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>