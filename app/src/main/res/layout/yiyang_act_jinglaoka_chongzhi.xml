<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginTop="19pt"
        android:background="@drawable/yiyang_bg_white_radius_8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_marginTop="20pt"
            android:includeFontPadding="false"
            android:text="其他充值金额"
            android:textColor="@color/color_3"
            android:textSize="27pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19pt"
            android:layout_marginTop="38pt">

            <TextView
                android:id="@+id/tv_select1"
                android:layout_width="144pt"
                android:layout_height="77pt"
                android:layout_marginRight="16pt"
                android:background="@drawable/yiyang_jijin_select_sel"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/color_main_yiyang"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_select2"
                android:layout_width="144pt"
                android:layout_height="77pt"
                android:layout_marginRight="16pt"
                android:background="@drawable/yiyang_jijin_select_nor"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/color_9"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_select3"
                android:layout_width="144pt"
                android:layout_height="77pt"
                android:layout_marginRight="16pt"
                android:background="@drawable/yiyang_jijin_select_nor"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/color_9"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_select4"
                android:layout_width="144pt"
                android:layout_height="77pt"
                android:layout_marginRight="16pt"
                android:background="@drawable/yiyang_jijin_select_nor"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/color_9"
                android:textSize="27pt" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_marginTop="38pt"
            android:includeFontPadding="false"
            android:text="其他充值金额"
            android:textColor="@color/color_3"
            android:textSize="27pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="267pt"
            android:layout_height="72pt"
            android:gravity="bottom"
            android:hint="0"
            android:includeFontPadding="false"
            android:paddingLeft="38pt"
            android:paddingBottom="5pt"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="35pt" />

        <View
            android:layout_width="247pt"
            android:layout_height="4pt"
            android:layout_marginLeft="20pt"
            android:background="#F6F6F6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:layout_marginTop="38pt"
            android:layout_marginBottom="10pt"
            android:includeFontPadding="false"
            android:text="支付方式"
            android:textColor="@color/color_3"
            android:textSize="27pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="20pt">

            <ImageView
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:src="@mipmap/shenqingxinxi_ico_alipay" />

            <ImageView
                android:id="@+id/iv_zhifubao"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="15pt"
                android:src="@mipmap/tuya_faxian_icon_selector_sel_1" />
        </RelativeLayout>

        <include layout="@layout/view_line" />

        <RelativeLayout
            android:id="@+id/rl_weixin"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="20pt">

            <ImageView
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:src="@mipmap/shenqingxinxi_ico_weichat" />

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="15pt"
                android:src="@mipmap/tuya_faxian_icon_selector_nor" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96pt"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29pt"
            android:includeFontPadding="false"
            android:text="充值金额"
            android:textColor="@color/color_3"
            android:textSize="27pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29pt"
            android:includeFontPadding="false"
            android:text="￥ 5"
            android:textColor="@color/red"
            android:textSize="35pt"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bt_chongzhi"
            android:layout_width="153pt"
            android:layout_height="65pt"
            android:layout_marginRight="29pt"
            android:background="@drawable/yiyang_bt_main_two"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="31pt" />
    </LinearLayout>
</LinearLayout>
