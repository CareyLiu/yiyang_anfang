<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="29pt"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="192pt">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:riv_corner_radius="8dp"
                android:src="@mipmap/nongye_banner_2" />

            <TextView
                android:id="@+id/tv_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10pt"
                android:includeFontPadding="false"
                android:text="基地水稻"
                android:textColor="@color/white"
                android:textSize="29pt"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64pt"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginRight="10pt"
                android:src="@mipmap/nongye_zhibo" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="杂交水稻"
                android:textColor="@color/color_3"
                android:textSize="29pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>