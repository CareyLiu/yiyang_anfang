<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="365pt"
        android:layout_marginHorizontal="29pt"
        android:layout_marginVertical="19pt"
        android:scaleType="fitXY"
        android:src="@mipmap/yiyang_falv_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginBottom="19pt">

        <LinearLayout
            android:id="@+id/ll_zhaolvshi"
            android:layout_width="211pt"
            android:layout_height="211pt"
            android:background="@drawable/yiyang_bg_white_radius_10"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="77pt"
                android:layout_height="77pt"
                android:src="@mipmap/falvfuwu_zhaolvshu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:includeFontPadding="false"
                android:text="找律师"
                android:textColor="@color/color_3"
                android:textSize="27pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_falvfuwu"
            android:layout_width="211pt"
            android:layout_height="211pt"
            android:layout_centerInParent="true"
            android:background="@drawable/yiyang_bg_white_radius_10"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="77pt"
                android:layout_height="77pt"
                android:src="@mipmap/falvfuwu_kuaiwenlvshi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:includeFontPadding="false"
                android:text="法律服务"
                android:textColor="@color/color_3"
                android:textSize="27pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mianfeizixun"
            android:layout_width="211pt"
            android:layout_height="211pt"
            android:layout_alignParentRight="true"
            android:background="@drawable/yiyang_bg_white_radius_10"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="77pt"
                android:layout_height="77pt"
                android:src="@mipmap/falvfuwu_mianfeizixun" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:includeFontPadding="false"
                android:text="免费咨询"
                android:textColor="@color/color_3"
                android:textSize="27pt" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:background="@drawable/yiyang_bg_white_radius_10" />
</LinearLayout>