<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:textColor="#fffa7e00"
        android:textSize="35pt"
        tools:text="¥68.00" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp"
        android:textColor="#ff111111"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="空气相框~实木创意照片墙简约标本画框装饰花卉" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_kuaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:text="快递:10"
            android:textColor="#ff999999"
            android:textSize="23pt" />

        <TextView
            android:id="@+id/tv_yuexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_kuaidi"
            android:layout_centerInParent="true"
            android:text="月销: 0件"
            android:textColor="#ff999999"
            android:textSize="23pt" />

        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_kuaidi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="吉林长春"
            android:textColor="#ff999999"
            android:textSize="23pt" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="14dp"
        android:background="@color/grayfff5f5f5" />


    <RelativeLayout
        android:id="@+id/rl_taocan"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="选择"
            android:textColor="#ff999999"
            android:textSize="27pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tv_choose"
            android:text="套餐1"
            android:textColor="#ff111111"
            android:textSize="27pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_canshu"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/tv_canshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="参数"
            android:textColor="#ff999999"
            android:textSize="27pt" />

        <TextView
            android:id="@+id/tv_pinpai_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/tv_canshu"
            android:text="品牌 型号..."
            android:textColor="#ff111111"
            android:textSize="27pt" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="14dp"
        android:background="@color/grayfff5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="宝贝评价"
            android:textColor="#ff111111"
            android:textSize="27pt" />

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:text="查看全部"
            android:textColor="#ffff5000"
            android:textSize="27pt" />

        <ImageView
            android:id="@+id/iv_see_more_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/sdpush_orange" />
    </RelativeLayout>

</LinearLayout>
