<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="288pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="29pt"
                android:paddingTop="20pt"
                android:paddingBottom="10pt">

                <View
                    android:layout_width="4pt"
                    android:layout_height="29pt"
                    android:layout_marginRight="10pt"
                    android:background="@color/color_main_yiyang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="为您推荐"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="269pt"
                android:layout_marginHorizontal="29pt"
                android:orientation="vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/yanglaojijin_changpin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="29pt"
                android:paddingTop="20pt"
                android:paddingBottom="10pt">

                <View
                    android:layout_width="4pt"
                    android:layout_height="29pt"
                    android:layout_marginRight="10pt"
                    android:background="@color/color_main_yiyang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="全部产品"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_height="269pt"
                android:layout_marginHorizontal="29pt"
                android:orientation="vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/yanglaojijin_changpin" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="269pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:orientation="vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/yanglaojijin_changpin" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
