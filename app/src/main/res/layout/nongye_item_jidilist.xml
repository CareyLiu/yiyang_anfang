<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29pt"
        android:layout_marginTop="19pt"
        android:background="@drawable/yiyang_bg_white_radius_8"
        android:orientation="vertical"
        android:paddingVertical="35pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="38pt">

            <ImageView
                android:layout_width="96pt"
                android:layout_height="96pt"
                android:src="@mipmap/nongye_led" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginRight="30pt"
                android:src="@mipmap/nongye_bianji" />

            <ImageView
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:src="@mipmap/nongye_shanchu" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="30pt"
            android:layout_marginBottom="20pt"
            android:includeFontPadding="false"
            android:text="农业基地"
            android:textColor="@color/color_1"
            android:textSize="29pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_marginBottom="20pt"
            android:includeFontPadding="false"
            android:text="显示内容："
            android:textColor="@color/color_1"
            android:textSize="29pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_turang_wendu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingLeft="40pt"
                android:text="土壤温度：20℃"
                android:textColor="@color/color_6"
                android:textSize="29pt" />

            <TextView
                android:id="@+id/tv_turang_shidu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="土壤湿度：20℃"
                android:textColor="@color/color_6"
                android:textSize="29pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_ph_zhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingLeft="40pt"
                android:text="土壤PH：7.2"
                android:textColor="@color/color_6"
                android:textSize="29pt" />

            <TextView
                android:id="@+id/tv_hanliang_dan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="土壤氮含量：7.2"
                android:textColor="@color/color_6"
                android:textSize="29pt" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_hanliang_lin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingLeft="40pt"
                android:text="土壤磷含量：7.2"
                android:textColor="@color/color_6"
                android:textSize="29pt" />

            <TextView
                android:id="@+id/tv_hanliang_jia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="土壤钾含量：7.2"
                android:textColor="@color/color_6"
                android:textSize="29pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_kongqi_wendu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingLeft="40pt"
                android:text="空气温度：20℃"
                android:textColor="@color/color_6"
                android:textSize="29pt" />

            <TextView
                android:id="@+id/tv_kongqi_shidu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="空气湿度：20℃"
                android:textColor="@color/color_6"
                android:textSize="29pt" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_fengxiang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:paddingLeft="40pt"
                android:text="风向：东南"
                android:textColor="@color/color_6"
                android:textSize="29pt" />

            <TextView
                android:id="@+id/tv_fengsu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="风速：1.3m/s"
                android:textColor="@color/color_6"
                android:textSize="29pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>