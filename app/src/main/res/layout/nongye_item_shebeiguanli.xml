<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="319pt"
        android:layout_marginTop="19pt"
        android:layout_marginRight="29pt"
        android:background="@drawable/yiyang_bg_white_radius_8"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="58pt"
            android:layout_height="58pt"
            android:layout_marginTop="52pt"
            android:layout_marginBottom="15pt" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="光控"
            android:textColor="@color/color_3"
            android:textSize="29pt"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="35pt"
            android:includeFontPadding="false"
            android:text="12：30开"
            android:textColor="@color/color_6"
            android:textSize="17pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_switch"
                android:layout_width="77pt"
                android:layout_height="48pt"
                android:layout_marginRight="40pt"
                android:src="@mipmap/nongye_kaiguan_nor" />

            <ImageView
                android:id="@+id/iv_set"
                android:layout_width="77pt"
                android:layout_height="48pt"
                android:src="@mipmap/nongye_shezhi_nor" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>