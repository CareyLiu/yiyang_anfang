<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:id="@+id/cl_item"
    android:background="@color/white"
    android:layout_marginHorizontal="15dp">


    <ImageView
        android:id="@+id/iv_select_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gouwuche_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_guige_ming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="套餐1" />

        <TextView
            android:id="@+id/tv_shangpin_ming"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="横版数码按键开关横版数码按键开关横版数码按键开关"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_guige_ming" />

        <TextView
            android:id="@+id/tv_jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="￥12.00"
            android:textColor="#ffe95d34"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shangpin_ming" />

        <TextView
            android:id="@+id/tv_youji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="邮寄:￥10"
            android:textColor="#ff000000"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_jine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/gouwuche_info"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_marginRight="3dp"
            android:id="@+id/tv_jianhao"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/huise_biankuang"
            android:gravity="center"
            android:text="—"
            android:textColor="#cccccc"
            app:layout_constraintRight_toLeftOf="@+id/tv_shuliang"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_marginRight="3dp"
            android:id="@+id/tv_shuliang"
            android:layout_width="38dp"
            android:layout_height="19dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/huise_biankuang"
            android:gravity="center"
            android:text="1"
            android:textColor="#ff242424"
            app:layout_constraintRight_toLeftOf="@+id/tv_jiahao"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
android:layout_marginRight="15dp"
            android:id="@+id/tv_jiahao"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/huise_biankuang"
            android:gravity="center"
            android:text="+"
            android:textColor="#cccccc"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>