<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayfff5f5f5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rll_one"
                    android:layout_width="317dp"
                    android:layout_height="288dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rv_backgroundColor="@color/white"
                    app:rv_backgroundPressColor="@color/suiyitie_backcolor"
                    app:rv_cornerRadius="10dp"
                    app:rv_strokeColor="@color/grayfff5f5f5"
                    app:rv_strokeWidth="2dp">

                    <ImageButton
                        android:id="@+id/iv_one"
                        android:layout_width="23dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/suiyitie_choose"
                        android:clickable="true" />

                </com.flyco.roundview.RoundRelativeLayout>

                <com.flyco.roundview.RoundLinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="106dp"
                    android:layout_height="300dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintRight_toLeftOf="@+id/ll_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rv_backgroundColor="@color/white"
                    app:rv_backgroundPressColor="@color/suiyitie_backcolor"
                    app:rv_cornerRadius_BL="10dp"
                    app:rv_cornerRadius_TL="10dp"
                    app:rv_strokeColor="@color/grayfff5f5f5"

                    app:rv_strokeWidth="2dp">


                    <ImageButton
                        android:id="@+id/iv_1"
                        android:layout_width="23dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/suiyitie_choose"
                        android:clickable="true" />
                </com.flyco.roundview.RoundLinearLayout>


                <com.flyco.roundview.RoundLinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="106dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rv_backgroundColor="@color/white"
                    app:rv_backgroundPressColor="@color/suiyitie_backcolor"
                    app:rv_strokeColor="@color/grayfff5f5f5"
                    app:rv_strokeWidth="2dp">

                    <ImageButton
                        android:id="@+id/iv_2"
                        android:layout_width="23dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/suiyitie_choose"
                        android:clickable="true" />
                </com.flyco.roundview.RoundLinearLayout>

                <com.flyco.roundview.RoundLinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="106dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tuya_switch_right"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/ll_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rv_backgroundColor="@color/white"
                    app:rv_backgroundPressColor="@color/suiyitie_backcolor"
                    app:rv_cornerRadius_BR="10dp"
                    app:rv_cornerRadius_TR="10dp"
                    app:rv_strokeColor="@color/grayfff5f5f5"
                    app:rv_strokeWidth="2dp">

                    <ImageButton
                        android:id="@+id/iv_3"
                        android:layout_width="23dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/suiyitie_choose"
                        android:clickable="true" />

                </com.flyco.roundview.RoundLinearLayout>

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="左键"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/ll_1"
                    app:layout_constraintRight_toRightOf="@+id/ll_1"
                    app:layout_constraintTop_toBottomOf="@+id/ll_1" />

                <TextView
                    android:id="@+id/tv_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="中键"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@+id/ll_2"
                    app:layout_constraintRight_toRightOf="@+id/ll_2"
                    app:layout_constraintTop_toBottomOf="@+id/ll_2" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="右键"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@+id/ll_3"
                    app:layout_constraintRight_toRightOf="@+id/ll_3"
                    app:layout_constraintTop_toBottomOf="@+id/ll_3" />


                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rl_left"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_left"
                    app:layout_constraintRight_toRightOf="@+id/tv_left"
                    app:layout_constraintTop_toBottomOf="@+id/tv_left"
                    app:rv_backgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/iv_add1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:id="@+id/tv_add1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_add1"
                        android:layout_centerHorizontal="true"
                        android:text="添加"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/rl_touming1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/touming_back"
                        android:visibility="gone">

                    </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/grayfff5f5f5" />
                </com.flyco.roundview.RoundRelativeLayout>

                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rl_center"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_center"
                    app:layout_constraintRight_toRightOf="@+id/tv_center"
                    app:layout_constraintTop_toBottomOf="@+id/tv_center"
                    app:rv_backgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/iv_add2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:id="@+id/tv_add2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_add2"
                        android:layout_centerHorizontal="true"
                        android:text="添加"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/grayfff5f5f5" />


                    <RelativeLayout
                        android:id="@+id/rl_touming2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/touming_back"
                        android:visibility="gone">

                    </RelativeLayout>
                </com.flyco.roundview.RoundRelativeLayout>

                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rl_right"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_right"
                    app:layout_constraintRight_toRightOf="@+id/tv_right"
                    app:layout_constraintTop_toBottomOf="@+id/tv_right"
                    app:rv_backgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/iv_add3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:id="@+id/tv_add3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_add3"
                        android:layout_centerHorizontal="true"
                        android:text="添加"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/rl_touming3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/touming_back"
                        android:visibility="gone">

                    </RelativeLayout>
                </com.flyco.roundview.RoundRelativeLayout>

                <TextView
                    android:id="@+id/tvsuiyitie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:text="该随意贴已与...绑定，如需解绑请去设置页设置"
                    android:textColor="#ff333333"

                    android:textSize="15sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_left" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>