<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_zhanwei"
            android:layout_width="29pt"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="192pt"
            android:layout_height="192pt"
            android:layout_marginRight="19pt"
            android:background="@drawable/yiyang_bg_white_radius_8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_jidi_icon"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_marginLeft="6pt"
                android:layout_marginTop="6pt"
                android:src="@mipmap/nongye_tab_jidi_nor" />


            <TextView
                android:id="@+id/tv_jidi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="29pt"
                android:includeFontPadding="false"
                android:text="农业基地05"
                android:textColor="@color/color_3"
                android:textSize="29pt"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30pt"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_shebei_num"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_marginRight="10pt"
                    android:background="@drawable/yiyang_bg_nongye_radius_8"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="23pt" />

                <TextView
                    android:id="@+id/tv_jidi_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="在线设备"
                    android:textColor="@color/color_3"
                    android:textSize="27pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>